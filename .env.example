# Environment Configuration
ENVIRONMENT=development

# API Configuration
HOST=0.0.0.0
PORT=8000
API_VERSION=v1
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ZeroDB Configuration
ZERODB_API_KEY=your_api_key_here
ZERODB_PROJECT_ID=your_project_uuid_here
ZERODB_BASE_URL=https://api.ainative.studio

# AINative Auth Configuration
AINATIVE_AUTH_API_URL=https://api.ainative.studio/v1/auth
AINATIVE_AUTH_API_KEY=your_auth_api_key_here

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Go Services Configuration
GO_EVENT_STREAM_PORT=9000
GO_ANALYTICS_PORT=9001

# Redis (if using local cache)
REDIS_URL=redis://localhost:6379/0

# OpenAI (for embeddings fallback)
OPENAI_API_KEY=your_openai_api_key_here
