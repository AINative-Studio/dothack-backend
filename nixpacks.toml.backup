[phases.setup]
nixPkgs = ["python312", "gcc"]

[phases.install]
cmds = ["python3 -m pip install --upgrade pip", "python3 -m pip install -r requirements.txt"]

[phases.build]
cmds = ["echo 'Build complete - ready to start'"]

[start]
cmd = "cd python-api && python3 -m uvicorn main:app --host 0.0.0.0 --port $PORT"
